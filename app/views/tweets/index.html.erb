<nav class="navbar navbar-expand-lg" data-bs-theme="dark">
  <div class="container-fluid">
    <%= link_to "Navbar", root_path, class:"navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Inicio", root_path, class:"nav-link active" %>
        </li>
        <li class="nav-item">
          <%= link_to "New tweet", new_tweet_path, class:"nav-link" %>
        </li>
      </ul>
        <%= form_with url: tweets_path, class:"d-flex", method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: ('Buscar Tweet por usuario'), value: params[:query_text], class:"form-control me-2" %>
        <button class="btn btn-outline-secondary" type="submit">Search</button>
        <% end %>
    </div>
  </div>
</nav>
<p style="color: green"><%= notice %></p>
<h1 class="text-center pb-5">Inicio</h1>
  <div id="tweets">
    <% @tweets.each do |tweet| %>
    <div class="row justify-content-center">
      <div class="col-sm-6 mb-3 mb-sm-0 ">
        <div class="card mb-5">
          <div class="card-body mt-3">
            <%= render tweet %>
            <p>
              <%= link_to "Show this tweet", tweet, class:"btn btn-secondary" %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="d-flex justify-content-center">
  <%= raw pagy_bootstrap_nav(@pagy) %>
</div>
